@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav mr-5">
        <li>
            <a class="nav-link zoom" href="/Manage/Index"><i class="fas fa-users-cog"></i> Account</a>
        </li>
        <li>
            <a class="nav-link zoom" href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i> Sign off</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav mr-5">
            <!--Register Button-->
            <li class="nav-item active">
                <a class="nav-link zoom" href="/Account/Register"><i></i><i class="fas fa-users"></i> Register</a>
            </li>
        
            <!--Login Button-->
            <li class="nav-item active">
                <a class="nav-link zoom" href="/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a>
            </li>
    </ul>
}

