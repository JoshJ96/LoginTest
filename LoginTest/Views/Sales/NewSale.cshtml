@model LoginTest.Models.Order

@{
    ViewBag.Title = "NewSale";
}

<div align="center">


    <h2>New sale</h2>
    <h4>Let's begin by inputing the customer's credentials.</h4>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                Customer ID
                <div class="col-md-10">
                    @Html.EditorFor(model => model.customerID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.customerID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Shipping Method
                <div class="col-md-10">
                    @Html.EditorFor(model => model.shippingMethod, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.shippingMethod, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Payment Method
                <div class="col-md-10">
                    @Html.EditorFor(model => model.paymentMethod, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.paymentMethod, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Next Step: Product List" class="btn btn-outline-success btn-block" />
                </div>
            </div>
        </div>
    }
</div>